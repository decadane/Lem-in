#include "libft.h"

t_list	*ft_lst_create_node(void *data, size_t size)
{
	t_list	*new;


	if (!(new = (t_list*)malloc(sizeof(t_list))))
		exit(-1);
	new->data = data;
	new->size = size;
	new->next = NULL;
	return (new);
}

void	ft_lst_add_head(t_list **head, void *data, size_t size)
{
	t_list		*new;

	if (head)
	{
		new = ft_lst_create_node(data, size);
		if (*head)
			new->next = *head;
		*head = new;
	}
}

void	ft_lst_add_tail(t_list **head, void *data, size_t size)
{
	t_list		*new;

	if (head)
	{

		new = ft_lst_create_node(data, size);
		if (*head)
		{
			while ((*head)->next)
				*head = (*head)->next;
			(*head)->next = new;
		}
		else
			*head = new;
	}
}

void	ft_lst_free(t_list **head)
{
	t_list	*tmp;

	if (head)
	{
		while (*head)
		{
			tmp = (*head)->next;
			free(*head);
			*head = tmp;
		}
	}
}
